import("//build/test.gni")
import("//foundation/multimedia/av_codec/config.gni")

source_set("hls_test_set") {
  sources = [ "$av_codec_root_dir/services/media_engine/plugins/source/http_source/hls/m3u8.cpp" ]
}

config("hls_unittest_cfg") {
  defines = [
    "HST_ANY_WITH_NO_RTTI",
    "MEDIA_OHOS",
  ]

  cflags = [
    "-Wno-sign-compare",
    "-fno-exceptions",
    "-fno-common",
    "-fstack-protector-all",
    "-Wshadow",
    "-FPIC",
    "-FS",
    "-O2",
    "-D_FORTIFY_SOURCE=2",
    "-Wformat=2",
    "-Wdate-time",
  ]

  cflags_cc = [
    "-std=c++17",
    "-fno-rtti",
  ]

  include_dirs = [
    "$av_codec_root_dir/interfaces",
    "$av_codec_root_dir/interfaces/inner_api/native",
    "$av_codec_root_dir/services/media_engine/plugins/source/http_source",
    "$media_foundation_root_dir/interface/inner_api",
    "$media_foundation_root_dir/src",
    "//third_party/ffmpeg",
    "//third_party/curl/include",
    "//third_party/openssl/include",
  ]
}

ohos_unittest("hls_media_downloader_unit_test") {
  testonly = true
  configs = [ ":hls_unittest_cfg" ]
  module_out_path = "av_codec/plugin/hls"
  sources = [ "hls_media_downloader_unit_test.cpp" ]
  deps = [
    "$av_codec_root_dir/services/dfx:av_codec_service_dfx",
    "$av_codec_root_dir/services/media_engine/plugins/source/http_source:media_plugin_HttpSource",
    "//third_party/curl:curl_shared",
    "//third_party/openssl:libcrypto_shared",
  ]

  external_deps = [
    "c_utils:utils",
    "graphic_surface:surface",
    "hilog:libhilog",
    "ipc:ipc_single",
    "media_foundation:media_foundation",
    "safwk:system_ability_fwk",
  ]

  relative_install_dir = "media/media_plugins"
  subsystem_name = "multimedia"
  part_name = "av_codec"
  resource_config_file =
      "$av_codec_root_dir/test/unittest/resources/ohos_test.xml"
}

